<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.aion.wallet.ui.components.partials.LedgerDisconnectedDialog"
            prefWidth="500.0" prefHeight="200.0" styleClass="anchor-pane">
    <stylesheets>
        <URL value="@dialog.css"/>
    </stylesheets>

    <VBox spacing="10" alignment="CENTER_LEFT" AnchorPane.topAnchor="25" AnchorPane.leftAnchor="25">
        <HBox spacing="5" alignment="CENTER_LEFT">
            <ImageView fitHeight="25.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icons/error-icon.png"/>
            </ImageView>
            <Label text="Ledger disconnected!" styleClass="main-text"/>
        </HBox>
        <Text text="Please make sure that the Ledger is connected to your computer and it is unlocked!"
              styleClass="paragraph-text"
              wrappingWidth="450"/>
    </VBox>
</AnchorPane>
