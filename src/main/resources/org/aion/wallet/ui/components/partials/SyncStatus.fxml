<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<HBox xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="org.aion.wallet.ui.components.partials.SyncStatusController"
            fx:id="parent"
            prefWidth="330.0"
            alignment="CENTER">

    <stylesheets>
        <URL value="@../footer-pane.css"/>
    </stylesheets>

    <HBox alignment="CENTER" spacing="10">
        <ImageView fx:id="progressBarIcon" fitHeight="24.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icons/total_blocks-256x256.png"/>
        </ImageView>
        <Label id="progressBarLabel" fx:id="progressBarLabel" styleClass="footer-pane-text"
               text="How behind is the sync?"/>
    </HBox>

</HBox>
