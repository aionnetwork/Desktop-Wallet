<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" styleClass="anchor-pane" xmlns="http://javafx.com/javafx/8.0.162"
            fx:controller="org.aion.wallet.ui.components.partials.FatalErrorDialog">
    <stylesheets>
        <URL value="@dialog.css"/>
    </stylesheets>

    <VBox alignment="CENTER" spacing="20">
        <Label styleClass="main-text" text="FATAL ERROR!">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Label>

        <Label text="A fatal error occurred! Please restart the Wallet!" textFill="orangered">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Label>

        <Button onMouseClicked="#restartWallet" styleClass="submit-button" text="Restart!">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Button>
    </VBox>
</AnchorPane>
